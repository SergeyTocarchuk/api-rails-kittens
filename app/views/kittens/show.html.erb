<div class="container">
  <h1>Kitten Show Page</h1>
  <div class="show-section">
    <div class="show-info">
      <p>Name: <%= @kitten.name %></p>
      <p>Age: <%= @kitten.age %></p>
      <p>Cuteness: <%= @kitten.cuteness %></p>
      <p>Softness: <%= @kitten.softness %></p>
      <div class="btn">
        <%= link_to 'Edit', edit_kitten_path(@kitten), class: "edit-btn" %>
        <%= link_to 'Delete', kitten_path(@kitten), 
                              method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: "delete-btn" %>
      </div>
    </div>
    <div class="show-img">

    </div>
  </div>
</div>